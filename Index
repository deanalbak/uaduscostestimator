<!-- SCRIPT LOGIC -->
<script>
    // Progress bar logic for 6 steps
    const progressData = [
        { percent: 17, id: 1 },
        { percent: 33, id: 2 },
        { percent: 50, id: 3 },
        { percent: 67, id: 4 },
        { percent: 83, id: 5 },
        { percent: 100, id: 6 }
    ];
    function updateProgress(step) {
        for (let i = 1; i <= 6; i++) {
            document.getElementById(`progressBar${i}`).style.width = progressData[i-1].percent + '%';
            document.getElementById(`progressPercent${i}`).textContent = progressData[i-1].percent + '%';
        }
    }
    // Navigation logic
    let currentStep = 1;
    function showStep(step) {
        document.querySelectorAll('.adu-step-container').forEach((el, idx) => {
            el.classList.remove('active');
        });
        document.getElementById('step'+step).classList.add('active');
        currentStep = step;
        window.scrollTo({top:0,behavior:'smooth'});
        updateProgress(step);
        if (step === 6) fillEstimate();
    }
    // Step 1 validation
    function validateAndContinue() {
        const form = document.getElementById('adu-form');
        const inputs = form.querySelectorAll('input[required], select[required]');
        let isValid = true;
        inputs.forEach(input => {
            if (!input.value.trim()) {
                isValid = false;
                input.classList.add('error');
            } else {
                input.classList.remove('error');
            }
        });
        if (isValid) {
            const formData = {
                address: document.getElementById('address').value,
                city: document.getElementById('city').value,
                state: document.getElementById('state').value,
            };
            sessionStorage.setItem('aduProjectData_step1', JSON.stringify(formData));
            showStep(2);
        }
    }
    // Step 2 selection
    let selectedValueStep2 = null;
    function selectOption(el) {
        document.querySelectorAll('#step2 .option').forEach(opt => opt.classList.remove('active'));
        el.classList.add('active');
        selectedValueStep2 = el.querySelector('.option-title').innerText;
    }
    function goBack(step) { showStep(step); }
    function goNext2() {
        if (!selectedValueStep2) { alert('Please select an ADU type.'); return; }
        sessionStorage.setItem('adu_type', JSON.stringify(selectedValueStep2));
        showStep(3);
    }
    // Step 3 logic
    const form3 = document.getElementById('details-form');
    const continueBtn3 = document.querySelector('#step3 .btn-continue');
    const sectionBed = document.getElementById('section-bed');
    const sectionBath = document.getElementById('section-bath');
    if(form3){
        form3.addEventListener('change', (e) => {
            if (e.target.type === 'radio') {
                const fieldName = e.target.name;
                if (fieldName === 'square_footage') { sectionBed.classList.remove('is-inactive'); }
                if (fieldName === 'bedrooms') { sectionBath.classList.remove('is-inactive'); }
                checkFormCompletion3();
            }
        });
        document.addEventListener('DOMContentLoaded', () => {
            sectionBed.classList.add('is-inactive');
            sectionBath.classList.add('is-inactive');
            checkFormCompletion3();
        });
        function checkFormCompletion3() {
            const sqftSelected = form3.querySelector('input[name="square_footage"]:checked');
            const bedSelected = form3.querySelector('input[name="bedrooms"]:checked');
            const bathSelected = form3.querySelector('input[name="bathrooms"]:checked');
            continueBtn3.disabled = !(sqftSelected && bedSelected && bathSelected);
        }
    }
    function goNext3() {
        if (continueBtn3.disabled) { alert('Please make a selection in each category.'); return; }
        const selections = {
            squareFootage: form3.querySelector('input[name="square_footage"]:checked').value,
            bedrooms: form3.querySelector('input[name="bedrooms"]:checked').value,
            bathrooms: form3.querySelector('input[name="bathrooms"]:checked').value,
        };
        sessionStorage.setItem('aduDetails', JSON.stringify(selections));
        showStep(4);
    }
    // Step 4 logic
    let selectedValue4 = null;
    const options4 = document.querySelectorAll('#timeline-options .option');
    const continueBtn4 = document.getElementById('continueBtn4');
    options4.forEach(option => {
        option.addEventListener('click', () => {
            options4.forEach(opt => opt.classList.remove('selected'));
            option.classList.add('selected');
            selectedValue4 = option.getAttribute('data-value');
            continueBtn4.disabled = false;
        });
    });
    function goNext4() {
        if (!selectedValue4) return;
        sessionStorage.setItem('aduTimeline', JSON.stringify(selectedValue4));
        showStep(5);
    }
    // Step 5 Contact Submit
    const contactForm = document.getElementById('contact-form');
    const submitButton = document.getElementById('submit-button');
    const googleScriptUrl = 'https://script.google.com/macros/s/AKfycbwrcJN3pEi47VfDTa1gvpmePEWxZjbBpe_tNhKHxU-oOGDZ7IGlPm69LUFPLo5fvOEB/exec';
    if(contactForm){
        contactForm.addEventListener('submit', function (e) {
            e.preventDefault();
            submitButton.disabled = true;
            submitButton.textContent = 'Submitting...';
            const aduType = JSON.parse(sessionStorage.getItem('adu_type')) || 'N/A';
            const aduDetails = JSON.parse(sessionStorage.getItem('aduDetails')) || {};
            const aduTimeline = JSON.parse(sessionStorage.getItem('aduTimeline')) || 'N/A';
            const payload = {
                firstName: document.getElementById("firstName").value,
                lastName: document.getElementById("lastName").value,
                email: document.getElementById("email").value,
                phone: document.getElementById("phone").value,
                notes: document.getElementById("notes").value,
                aduType: aduType,
                squareFootage: aduDetails.squareFootage || 'N/A',
                bedrooms: aduDetails.bedrooms || 'N/A',
                bathrooms: aduDetails.bathrooms || 'N/A',
                timeline: aduTimeline
            };
            // Optionally post to Google Script in background
            const iframe = document.createElement('iframe');
            iframe.name = 'submit-iframe';
            iframe.style.display = 'none';
            document.body.appendChild(iframe);
            const tempForm = document.createElement('form');
            tempForm.method = 'post';
            tempForm.action = googleScriptUrl;
            tempForm.target = iframe.name;
            const dataInput = document.createElement('input');
            dataInput.type = 'hidden';
            dataInput.name = 'data';
            dataInput.value = JSON.stringify(payload);
            tempForm.appendChild(dataInput);
            document.body.appendChild(tempForm);
            tempForm.submit();
            setTimeout(() => { showStep(6); }, 1500);
        });
    }
    // Step 6 estimate calculation
    // Step 6 estimate calculation (overridden to $7,500 / 5×$1,500)
function fillEstimate() {
    // fixed cost is always 7,500
    const fixedCost = 7500;
    // break into 5 equal payments
    const payment = Math.round(fixedCost / 5); // 1500

    // Update the DOM
    document.getElementById("fixedCost").textContent =
      `$${fixedCost.toLocaleString()}`;
    document.getElementById("monthlyPayment").textContent =
      payment.toLocaleString();

    // Leave your construction cost logic intact:
    const aduType = JSON.parse(sessionStorage.getItem('adu_type'));
    let obRange = [0, 0], gcRange = [0, 0];
    if (aduType === "Garage Conversion") {
        obRange = [75, 113];
        gcRange = [113, 188];
    } else if (aduType === "Attached ADU") {
        obRange = [131, 188];
        gcRange = [150, 225];
    } else {
        obRange = [131, 188];
        gcRange = [188, 263];
    }
    document.getElementById("obLow").textContent = obRange[0];
    document.getElementById("obHigh").textContent = obRange[1];
    document.getElementById("gcLow").textContent = gcRange[0];
    document.getElementById("gcHigh").textContent = gcRange[1];
}

    document.addEventListener('DOMContentLoaded', function() {
        showStep(1);
        updateProgress(1);
        if(sectionBed) sectionBed.classList.add('is-inactive');
        if(sectionBath) sectionBath.classList.add('is-inactive');
    });
</script>
</body>
</html>
